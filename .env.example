# Google Chat Webhook URL (REQUIRED)
# Get this from Google Chat > Space > Manage webhooks
GOOGLE_CHAT_WEBHOOK_URL=https://chat.googleapis.com/v1/spaces/YOUR_SPACE_ID/messages?key=YOUR_KEY&token=YOUR_TOKEN

# Application Configuration
PORT=8080

# Database Configuration
DATABASE_PATH=./standup_bot.db

# Scheduler Configuration
REMINDER_TIME=09:00
TIMEZONE=UTC
SKIP_WEEKENDS=true

# Logging
LOG_LEVEL=info
